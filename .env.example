FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# NIMs endpoint for /api/v2/chat/completions proxy
NIM_ENDPOINT=http://<DOMAIN>/v1/chat/completions

# VSS backend for /api/v1/chat/completions (RAG-enabled)
VSS_BACKEND=http://localhost:8000
# For k8s hostPath use case, create a file on host e.g. /etc/vss/VSS_ASSET_ID and mount it into the pod.
# VSS_ASSET_ID can still be used for local testing.
